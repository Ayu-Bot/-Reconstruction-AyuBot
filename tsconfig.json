{
  "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "rootDir": "./src/",
      "outDir": "./dist/",
      "strict": true,
      "moduleResolution": "Node",
      "importHelpers": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "typeRoots": [
        "node_modules/@types",
        "src/typings"
      ],
      "sourceMap": false,
      "baseUrl": ".",
      "paths": {
        "@typings/*": ["src/typings/*"],
        "@utils/*": ["src/utils/*"],
        "@structures/*": ["src/structures/*"],
        "@interactions/*": ["src/interactions/*"]
      }
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}